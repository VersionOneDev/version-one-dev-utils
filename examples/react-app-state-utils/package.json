{
  "name": "react-app",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.1.2",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "classnames": "^2.3.1",
    "react-app-polyfill": "^2.0.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.1.21",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/addon-jest": "^6.3.6",
    "@storybook/addon-links": "^6.1.21",
    "@storybook/node-logger": "^6.1.21",
    "@storybook/preset-create-react-app": "^3.1.6",
    "@storybook/react": "^6.1.21",
    "@storybook/testing-react": "^0.0.21",
    "autoprefixer": "^9.8.6",
    "deepmerge": "^4.2.2",
    "dotenv": "^8.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "npm-check-updates": "^9.2.2",
    "postcss": "^7.0.35",
    "prettier": "^2.1.2",
    "storybook": "^6.3.6",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.1.2",
    "version-one-dev-utils": "file:../.."
  },
  "scripts": {
    "update": "ncu -u",
    "lint": "eslint src/",
    "start": "craco start",
    "build": "craco build",
    "test": "../../node_modules/react-scripts/bin/react-scripts.js test --setupFiles ./tests/setupFiles.js --setupFilesAfterEnv ./tests/setupTests.js",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "17"
      }
    },
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "rules": {
      "no-console": 0,
      "prettier/prettier": "error"
    }
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 edge version",
    "last 1 safari version",
    "last 1 ie version",
    "last 1 ios_saf version",
    "last 1 and_chr version"
  ],
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!version-one-dev-utils*)"
    ]
  }
}
