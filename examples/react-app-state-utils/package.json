{
  "name": "react-app",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "react-select": "^5.0.0",
    "version-one-dev-utils": "file:../.."
  },
  "devDependencies": {},
  "scripts": {
    "update": "ncu -u",
    "lint": "eslint src/",
    "start": "npm-run-all --parallel start:**",
    "start:react-scripts": "react-scripts start",
    "start:tailwind": "build:tailwind -- --watch",
    "storybook": "start-storybook -p 6006 -s public",
    "build": "npm-run-all --sequential build:**",
    "build:tailwind": "tailwindcss build -i src/tailwind/index.css -o src/tailwind/output.css",
    "build:react-scripts": "react-scripts build",
    "test": "react-scripts test --setupFiles ./tests/setupFiles.js --setupFilesAfterEnv ./tests/setupTests.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "17"
      }
    },
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "rules": {
      "no-console": 0,
      "prettier/prettier": "error"
    }
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 edge version",
    "last 1 safari version",
    "last 1 ie version",
    "last 1 ios_saf version",
    "last 1 and_chr version"
  ],
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!version-one-dev-utils*)"
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
